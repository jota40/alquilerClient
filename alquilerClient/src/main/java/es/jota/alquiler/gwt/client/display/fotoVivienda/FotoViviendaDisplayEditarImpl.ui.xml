<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:es.jota.utils.gwt.client.widget.display">

	<g:HTMLPanel styleName="col-lg-3 col-md-4 col-sm-4 col-xs-6 thumb">
		<div class="thumbnail">
			<img ui:field="foto" style="height: 200px;" class="img-responsive img-thumbnail"></img>
			<div class="caption">
				<div class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-sm-2 control-label">Titulo</label>
						<div class="col-sm-10">
							<input ui:field="titulo" type="text" class="form-control" placeholder="Titulo"/>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Orden</label>
						<div class="col-sm-10">
							<input ui:field="orden" type="number" class="form-control" placeholder="Orden"/>
						</div>
					</div>
				</div>
				<p>
					<d:Accion ui:field="delete" class="btn btn-danger" text="Borrar" />
					<d:Accion ui:field="update" class="btn btn-success pull-right" text="Actualizar" />
				</p>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>